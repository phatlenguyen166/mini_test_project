{
  "info": {
    "name": "Transfer Simulation API",
    "description": "API for simulating money transfers from JPY to VND",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Preview",
      "item": [
        {
          "name": "Preview Transfer (JPY Input)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"input_mode\": \"JPY_INPUT\",\n  \"send_amount_jpy\": 50000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/transfer/preview",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transfer", "preview"]
            },
            "description": "Preview transfer calculation with JPY amount input"
          }
        },
        {
          "name": "Preview Transfer (VND Input)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"input_mode\": \"VND_INPUT\",\n  \"receive_amount_vnd\": 10000000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/transfer/preview",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transfer", "preview"]
            },
            "description": "Preview transfer calculation with VND amount input"
          }
        }
      ]
    },
